<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href="css/styles.css" rel="stylesheet" type="text/css" />

        <title>SpaceY</title>
        
        <script>
            $(document).ready(function(){
            $(".delete").on("click", function(event){
               
               if( !confirm("Delete item?")){ 
                   event.preventDefault(); //prevents default behavior of links
               }
               
            });//confirm
            
        });//document ready
        </script>
    </head>
    <body>
        
        <span>Welcome to the Admin Page</span>
        
        <form action="/addItem">
            <button>Add New Item</button>
        </form>
        
        <form action="/reports">
            <button>Generate Reports</button>
        </form>

        <form action="/logout">
                <button type="submit">Log-Out</button>
        </form>
        
        <h3>Parts List</h3>
        <% itemList.forEach(function(item){ %>
            <%=item.upgrade%><br>
            [<a href="/updateItem?engineId=<%=item.engineId%>">Update</a>]
            [<a class="delete" href="/deleteItem?engineId=<%=item.engineId%>">Delete</a>]
            <br><br>
        <% }) %>
    </body>
</html>