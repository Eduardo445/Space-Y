<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href="css/styles.css" rel="stylesheet" type="text/css" />
        
        <script src = "https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.1/underscore-min.js" ></script>
        <title>SpaceY</title>
        
        <script>
                $(document).ready(function() {
                    $("#loginBtn").on("click", function(){
                        $.ajax({
                              method: "post",
                                 url: "/check",
                            dataType: "json",
                                data: { "username":$("#username").val(),
                                        "password":$("#password").val() },
                             success: function(result,status) {
                                if (!result) {
                                    alert("Wrong credentials!");
                                } else {
                                    location.href = "/admin"; //redirects to admin route
                                }
                            }
                        });//ajax
                    });//click
                }); //document.ready
        </script>
        
    </head>
    <body>
        
        <h1>Log in page</h1>
        <hr />
        <nav>
            <a class="head" href="/">Home</a>
            <a class="head" href="/AdminLog-In">Admin Log-In</a>
            <a class="head" href="/buildShip">Build</a>
            <a class="head" href="/shopcart">Cart</a>
        </nav>
        
        <div id="loginPage">
            <div id="loginCred">
            UserName: <input type="text" id="username" name="username"><br>
            Password: <input type="password" id="password"><br>
            <button id="loginBtn">Confirm</button>
            </div>
            <figure>
                <img src="https://preview.redd.it/j9w0e7slomj31.png?width=960&crop=smart&auto=webp&s=78435ba97d9fd53b9dc9129fbab6fafec58c2770">
            </figure>
        </div>
    </body>
</html>